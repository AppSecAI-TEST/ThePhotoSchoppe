<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageButton

                android:layout_width="50dp"
                android:id="@+id/explore_web_btn"
                android:src="@drawable/ic_menu_locate"
                android:background="@color/colorGreen"
                android:layout_height="50dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:id="@+id/explore_web_tv"

                android:text="View in Flikcr web site"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_margin="10dp">
            <ImageButton
                android:layout_width="50dp"
                android:id="@+id/attach_email_btn"
                android:src="@drawable/ic_menu_email"
                android:background="@color/colorGreen"
                android:layout_height="50dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:id="@+id/attach_email_tv"
                android:text="Attach with Email"/>

        </LinearLayout>


</LinearLayout>
